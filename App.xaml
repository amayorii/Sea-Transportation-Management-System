<Application x:Class="Sea_Transportation_Management_System.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Sea_Transportation_Management_System" 
             xmlns:vm="clr-namespace:Sea_Transportation_Management_System.ViewModel"
             xmlns:view="clr-namespace:Sea_Transportation_Management_System.View">
    <Application.Resources>
        <DataTemplate DataType="{x:Type vm:VesselStorageViewModel}">
            <view:VesselStorageView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:PortStorageViewModel}">
            <view:PortStorageView />
        </DataTemplate>
    </Application.Resources>
</Application>
