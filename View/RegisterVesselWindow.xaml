<Window x:Class="Sea_Transportation_Management_System.View.RegisterVesselWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sea_Transportation_Management_System.View"
        mc:Ignorable="d"
        Icon="/Images/vesselIcon.png"
        Title="RegisterVesselWindow" Height="450" Width="300"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition x:Name="storageRow" Height="0"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Label Content="Name"
               HorizontalAlignment="Center"
               VerticalAlignment="Top"
               FontSize="20"/>
        <TextBox HorizontalAlignment="Center"
                 VerticalAlignment="Center"
                 x:Name="nameBox"
                 Width="200"
                 Height="30"
                 FontSize="15"
                 Margin="0,25,0,0"
                 VerticalContentAlignment="Center"/>
        
        <Label Content="Home port" Grid.Row="1"
               HorizontalAlignment="Center"
               VerticalAlignment="Top"
               FontSize="20"/>
        <ComboBox HorizontalAlignment="Center" Grid.Row="1"
                  VerticalAlignment="Center"
                  x:Name="homePortBox"
                  ItemsSource="{Binding Ports}"
                  Width="200"
                  Height="30"
                  Margin="0,25,0,0"
                  FontSize="15"
                  VerticalContentAlignment="Center"/>
        
        <Label Content="Type" Grid.Row="2"
               HorizontalAlignment="Center"
               VerticalAlignment="Top"
               FontSize="20"/>
        <ComboBox HorizontalAlignment="Center" Grid.Row="2"
                  VerticalAlignment="Center"
                  x:Name="typeBox"
                  ItemsSource="{Binding Types}"
                  Width="200"
                  Height="30"
                  Margin="0,25,0,0"
                  FontSize="15" SelectionChanged="TypeChanged"
                  VerticalContentAlignment="Center"/>


        <Label Content="Fuel capacity" Grid.Row="3"
               HorizontalAlignment="Center"
               VerticalAlignment="Top"
               FontSize="20"/>
        <TextBox HorizontalAlignment="Center" Grid.Row="3"
                 VerticalAlignment="Center"
                 x:Name="fuelBox"
                 Width="200"
                 Height="30"
                 FontSize="15"
                 Margin="0,25,0,0"
                 VerticalContentAlignment="Center"/>

        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Orientation="Vertical">
                <Label Content="Max capacity"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontSize="20"/>
                <TextBox HorizontalAlignment="Center"
                         VerticalAlignment="Center"
                         x:Name="capacityBox"
                         Width="125"
                         Height="30"
                         FontSize="15"
                         VerticalContentAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" Grid.Column="1">
                <Label Content="Max items"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontSize="20"/>
                <TextBox HorizontalAlignment="Center"
                         VerticalAlignment="Center"
                         x:Name="itemBox"
                         Width="125"
                         Height="30"
                         FontSize="15"
                         VerticalContentAlignment="Center"/>
            </StackPanel>
        </Grid>

        <Button Grid.Row="5"
                FontSize="25"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Content="Submit"
                Width="130"
                Height="40"
                Cursor="Hand"
                Click="Submit"/>
    </Grid>
</Window>
