<Window x:Class="Sea_Transportation_Management_System.View.RegisterPortWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sea_Transportation_Management_System.View"
        mc:Ignorable="d"
        Icon="/Images/portIcon.png"
        Title="RegisterPortWindow" Height="400" Width="300"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Label Content="Name"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   FontSize="20"/>
            <TextBox HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     x:Name="nameBox"
                     Width="200"
                     Height="30"
                     FontSize="15"
                     Margin="0,25,0,0"
                     VerticalContentAlignment="Center"/>

            <Label Content="Location" Grid.Row="1"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   FontSize="20"/>
            <StackPanel Grid.Row="1" Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Margin="0,25,0,0">
                <Label Content="Latitude:"
                       FontSize="15"/>
                <TextBox HorizontalAlignment="Center" Grid.Row="1"
                         VerticalAlignment="Center"
                         x:Name="latitude"
                         Width="60"
                         Height="30"
                         FontSize="13"
                         VerticalContentAlignment="Center"/>
                <Label Content="Longitude:"
                       FontSize="15"/>
                <TextBox HorizontalAlignment="Center" Grid.Row="1"
                         VerticalAlignment="Center"
                         x:Name="longitude"
                         Width="60"
                         Height="30"
                         FontSize="13"
                         VerticalContentAlignment="Center"/>
            </StackPanel>
            
            <Label Content="Fuel stock" Grid.Row="2"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   FontSize="20"/>
            <TextBox HorizontalAlignment="Center" Grid.Row="2"
                     VerticalAlignment="Center"
                     x:Name="fuelStockBox"
                     Width="200"
                     Height="30"
                     FontSize="15"
                     Margin="0,25,0,0"
                     VerticalContentAlignment="Center"/>

            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Vertical">
                    <Label Content="Max capacity"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           FontSize="20"/>
                    <TextBox HorizontalAlignment="Center"
                             VerticalAlignment="Center"
                             x:Name="capacityBox"
                             Width="125"
                             Height="30"
                             FontSize="15"
                             VerticalContentAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Vertical" Grid.Column="1">
                    <Label Content="Max items"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           FontSize="20"/>
                    <TextBox HorizontalAlignment="Center"
                             VerticalAlignment="Center"
                             x:Name="itemBox"
                             Width="125"
                             Height="30"
                             FontSize="15"
                             VerticalContentAlignment="Center"/>
                </StackPanel>
            </Grid>
            
            <Button Grid.Row="4"
                    FontSize="25"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Content="Submit"
                    Width="130"
                    Height="40"
                    Cursor="Hand"
                    Click="Submit"/>
        </Grid>
    </Grid>
</Window>
