<Window x:Class="Sea_Transportation_Management_System.View.VesselSelecting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sea_Transportation_Management_System.View"
        mc:Ignorable="d"
        Title="VesselSelecting" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <ListBox x:Name="Vessels"
                 Margin="5"
                 SelectionChanged="Vessels_SelectionChanged"
                 SelectionMode="Extended"/>

        <Button Content="Select"
                x:Name="selectBtn" Grid.Row="1"
                Height="30" Width="90"
                IsEnabled="False"
                Click="SelectClick"
                HorizontalAlignment="Right"
                Margin="0,0,10,0"/>
    </Grid>
</Window>
