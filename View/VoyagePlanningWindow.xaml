<Window x:Class="Sea_Transportation_Management_System.View.VoyagePlanningWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sea_Transportation_Management_System.View"
        mc:Ignorable="d"
        Icon="/Images/Voyage.png"
        Title="VoyagePlanningWindow" Height="475" Width="620"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Content="Name"
               HorizontalAlignment="Center"
               VerticalAlignment="Top"
               FontSize="20"/>
        <TextBox HorizontalAlignment="Center"
                 VerticalAlignment="Center"
                 x:Name="nameBox"
                 Width="200"
                 Height="30"
                 FontSize="15"
                 Margin="0,25,0,0"
                 VerticalContentAlignment="Center"/>

        <Label Content="Vessel" Grid.Row="1"
               HorizontalAlignment="Center"
               VerticalAlignment="Top"
               FontSize="20"/>
        <ComboBox HorizontalAlignment="Center" Grid.Row="1"
                  VerticalAlignment="Center"
                  x:Name="vesselBox"
                  Width="200"
                  Height="30"
                  Margin="0,25,0,0"
                  FontSize="15"
                  VerticalContentAlignment="Center"/>

        <Label Content="Ports" Grid.Row="2"
               HorizontalAlignment="Center"
               VerticalAlignment="Top"
               FontSize="20"/>
        <StackPanel Grid.Row="2" Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0,25,0,0">
            
            <Label Content="From"
                   VerticalAlignment="Center"
                   FontSize="20"/>
            <ComboBox VerticalAlignment="Center"
                      x:Name="fromPort"
                      Width="200"
                      Height="30"
                      FontSize="15"
                      VerticalContentAlignment="Center"/>

            <Label Content="To"
                   FontSize="20"/>
            <ComboBox HorizontalAlignment="Center" Grid.Row="2"
                      VerticalAlignment="Center"
                      x:Name="toPort"
                      Width="200"
                      Height="30"
                      FontSize="15"
                      VerticalContentAlignment="Center"/>

        </StackPanel>
        

        <Label Content="Departure date/Arrival date" Grid.Row="3"
               HorizontalAlignment="Center"
               VerticalAlignment="Top"
               FontSize="20"/>
        <StackPanel Grid.Row="3" Orientation="Horizontal"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Margin="0,25,0,0">

            <Label Content="Departure:"
                   VerticalAlignment="Center"
                   FontSize="20"/>
            <DatePicker VerticalAlignment="Center"
                        x:Name="depDate"
                        Width="200"
                        Height="30"
                        FontSize="15"
                        VerticalContentAlignment="Center"/>

            <Label Content="Arrival:"
                   FontSize="20"
                   Margin="10,0,0,0"/>
            <DatePicker HorizontalAlignment="Center" Grid.Row="2"
                        VerticalAlignment="Center"
                        x:Name="arrDate"
                        Width="200"
                        Height="30"
                        FontSize="15"
                        VerticalContentAlignment="Center"/>

        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="4"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            
            <Label Content="Distance: "
                   VerticalAlignment="Center"
                   FontSize="20"/>
            <TextBlock VerticalAlignment="Center"
                       x:Name="distanceDisplay"
                       Width="125"
                       Height="30"
                       FontSize="15"/>

            <Label Content="Fuel consumption: "
                   VerticalAlignment="Center"
                   FontSize="20"/>
            <TextBlock VerticalAlignment="Center"
                       x:Name="fuelConsumptionDisplay"
                       Width="125"
                       Height="30"
                       FontSize="15"/>

        </StackPanel>
        <Button Grid.Row="5"
                FontSize="25"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Content="Submit"
                Width="130"
                Height="40"
                Cursor="Hand"
                Click="Submit"/>
    </Grid>
</Window>
